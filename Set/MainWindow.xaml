<Window x:Class="Set.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Set"
        mc:Ignorable="d"
        Icon="H:\Set\Set\bin\Debug\Images\Set.jpg"
        Title="Set! The Game" MinHeight="600" MinWidth="800">

    <Window.Resources>
        <DataTemplate  DataType="{x:Type local:MenuViewModel}">
            <local:MenuView/>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type local:GameViewModel}">
            <local:GameView/>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type local:OptionsViewModel}">
            <local:OptionsView/>
        </DataTemplate>
        <DataTemplate  DataType="{x:Type local:RulesViewModel}">
            <local:RulesView/>
        </DataTemplate>

      
         

    </Window.Resources>

    
    
    <Window.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding ChangePageToMenuShortcut}"  ></KeyBinding>
    </Window.InputBindings>

    <DockPanel>
        <ContentControl Content="{Binding CurrentPageViewModel}" />

    </DockPanel>
</Window>
    