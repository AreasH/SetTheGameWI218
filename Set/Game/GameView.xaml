<UserControl x:Class="Set.GameView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Set"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="437*"/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="166*"/>
            <RowDefinition Height="629*"/>
            <RowDefinition Height="205*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1"  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
              
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Background="White" BorderThickness="0">
             <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding zeroButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel> </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding oneButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding twoButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding threeButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding fourButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding fiveButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding sixButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding sevenButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="2">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding eightButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="0" Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding nineButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding tenButtonImageSource,Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>
          <Button HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" Grid.Row="3">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding elevenButtonImageSource, Mode=TwoWay,
                                                UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
          </Button>

        </Grid>
        <Button Content="Zurück zum Menü" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Command="{Binding ChangeToMenuShortcut}"/>
        <Button Content="Sets anzeigen" Height="192"  Grid.Row="1" VerticalAlignment="Center"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Center" Height="86"  Grid.Row="2" Text="Es sind x Sets möglich" TextWrapping="Wrap" VerticalAlignment="Center" Width="161"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Height="50" Text="Zeit:         xx:yy" TextWrapping="Wrap" VerticalAlignment="Top" Width="287"/>
        <TextBlock Grid.Column="2" HorizontalAlignment="Right" Height="105"  Grid.Row="1" Text="Noch x Karten im Set" TextWrapping="Wrap" VerticalAlignment="Top" Width="158" Margin="0,0.333,0,0"/>
    </Grid>
</UserControl>
